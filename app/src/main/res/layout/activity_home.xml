<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.zju.yibao.HOME">

    <include layout="@layout/mytoolbar" />

    <FrameLayout
        android:id="@+id/fragment_show"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <RadioGroup
        android:id="@+id/bottom_bar"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="@color/colorPrimary"
        android:orientation="horizontal">


        <RadioButton
            android:id="@+id/bottom_bar_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:button="@drawable/course"
            android:checked="true"
            android:gravity="center_horizontal|center_vertical"
            android:padding="5dp"
            android:text="课程"
            android:textColor="@color/tab_selector_tv_color"
            android:textSize="20dp" />


        <RadioButton
            android:id="@+id/bottom_bar_2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:button="@drawable/my"
            android:gravity="center_horizontal|center_vertical"
            android:padding="5dp"
            android:text="我"
            android:textColor="@color/tab_selector_tv_color"
            android:textSize="20dp" />


    </RadioGroup>

</LinearLayout>
